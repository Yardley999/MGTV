<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="MGTVCommandSet_en-us">
    <CommandPrefix> TV </CommandPrefix>
    <Example> Open </Example>

    <Command Name="OpenApp">
      <Example> Open my media player</Example>
      <ListenFor> Open [my] media player </ListenFor>
      <Feedback> Opening </Feedback>
      <Navigate />
    </Command>

    <Command Name="CloseApp">
      <Example> close my media player </Example>
      <ListenFor> close [my] media player </ListenFor>
      <Feedback> Trying </Feedback>
      <Navigate/>
    </Command>

    <Command Name="PlayVideo">
      <Example> Play </Example>
      <ListenFor> Play [Video]</ListenFor>
      <Feedback> Trying </Feedback>
      <Navigate/>
    </Command>

    <Command Name="PauseVideo">
      <Example> Pause </Example>
      <ListenFor> Pause [Video]</ListenFor>
      <Feedback> Trying </Feedback>
      <Navigate/>
    </Command>

    <Command Name="StopVideo">
      <Example> Stop </Example>
      <ListenFor> Stop [Video]</ListenFor>
      <Feedback> Trying </Feedback>
      <Navigate/>
    </Command>


    <Command Name="ShowSomeMovices">
      <Example>Show me some movies</Example>
      <ListenFor> show me some {content}</ListenFor>
      <Feedback> Trying to get recommendation </Feedback>
      <VoiceCommandService Target="MGTVVoiceCommandService"/>
    </Command>

    <PhraseList Label="content">
      <Item>movies</Item>
      <Item>television program</Item>
    </PhraseList>
    
  </CommandSet>

</VoiceCommands>